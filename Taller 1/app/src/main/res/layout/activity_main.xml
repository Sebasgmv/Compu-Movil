<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_100"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_talle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_layouts_info"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/examples_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
            android:id="@+id/funciones_conteiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/boton_linear_layout"
                android:backgroundTint="@color/md_grey_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fibonacci_layout_label" />

            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lo que sea"
                app:layout_constraintBottom_toTopOf="@+id/boton_relative_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boton_linear_layout" />

            <Button
                android:id="@+id/boton_relative_layout"
                android:backgroundTint="@color/md_grey_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/factorial_layout_label" />

            <TextView
                android:id="@+id/text_posiciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posiciones_layout_label"
                app:layout_constraintBottom_toTopOf="@+id/boton_relative_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boton_linear_layout" />

            <Button
                android:id="@+id/boton_web_view"
                android:backgroundTint="@color/md_grey_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paises_layout_label" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>